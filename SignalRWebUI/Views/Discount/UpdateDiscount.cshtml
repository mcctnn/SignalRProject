@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirimli Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="DiscountId"/>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> İndirimli Ürün Güncellemesi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Ürün adını giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Amount">Ürün indirim miktarını giriniz</label>
                                <input type="text" class="form-control" asp-for="Amount" id="Amount">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Görselin Url'ini giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklamasını giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description"></input>
                            </div>                                                      
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İndirimli ürünü güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

