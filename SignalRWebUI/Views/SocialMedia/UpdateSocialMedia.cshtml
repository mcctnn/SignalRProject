@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="SocialMediaId" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ana Sayfa Sosyal Medya Güncellemesi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlığı giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Url">Bağlantıyı giriniz</label>
                                <input type="text" class="form-control" asp-for="Url" id="Url">
                            </div>
                            <div class="form-group">
                                <label for="Icon">İkonu giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Sosyal Medyayı Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

