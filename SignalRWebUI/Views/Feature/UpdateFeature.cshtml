@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Öne Çıkarılanlar İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="FeatureId"/>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Öne Çıkarılanlar Güncellemesi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title1">Başlık 1 giriniz</label>
                                <input type="text" class="form-control" asp-for="Title1" id="Title1">
                            </div>
                            <div class="form-group">
                                <label for="Title2">Başlık 2 giriniz</label>
                                <input type="text" class="form-control" asp-for="Title2" id="Title2">
                            </div>
                            <div class="form-group">
                                <label for="Title3">Başlık 3 giriniz</label>
                                <input type="text" class="form-control" asp-for="Title3" id="Title3">
                            </div>
                            <div class="form-group">
                                <label for="Description1">Açıklama 1 giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description1" id="Description1"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="Description2">Açıklama 2 giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description2" id="Description2"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="Description3">Açıklama 3 giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description3" id="Description3"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Öne Çıkarılan Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

