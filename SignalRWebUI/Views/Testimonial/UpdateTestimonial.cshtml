@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Referanslar İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="TestimonialId"/>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Referans Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Ad-Soyad giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Title">Başlığı giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Comment">Yorum giriniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="Comment">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Görselin Url'ini giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklamasını giriniz</label>
                                <input type="text" class="form-control" asp-for="Status" id="Description"></input>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Referans Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

